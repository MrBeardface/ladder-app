$borderRadiusXLarge: 10px;

@import "bootstrap";

body {
	padding-top: 60px;
}

/* Footer
-------------------------------------------------- */

.footer {
  text-align: center;
  padding: 30px 0;
  margin-top: 70px;
  border-top: 1px solid #e5e5e5;
  background-color: #f5f5f5;
	p {
	  margin-bottom: 0;
	  color: #777;
	}
}

.footer-links {
  margin: 10px 0;
	li {
  	display: inline;
  	padding: 0 2px;
		&:first-child {
  		padding-left: 0;
		}
	}
}

/* Player Pages
-------------------------------------------------- */

.rank-badge {
	background-color: #fcf8e3;
	border: 1px solid #fbeed5;
	border-radius: 10px;
	padding: 15px;
	p {
		font-size: 0.88em;
		text-transform: uppercase;
		text-align: center;
		&.rank {
			font-size: 6em;
			font-weight: bold;
			line-height: 90%;
		}
		&.no-rank {
			font-size: 1.6em;
			font-weight: bold;
			margin: 1em 0;
			line-height: 120%;
		}
	}
}

.challenge-badge {
	color: #3a87ad;
	background-color: #d9edf7;
	border: 1px solid #bce8f1;
	border-radius: 10px;
	padding: 15px;
	hr {
		border-top-color: #bce8f1;
	}
}

.top-of-ladder-badge {
	color: #468847;
	background-color: #dff0d8;
	border: 1px solid #d6e9c6;
	border-radius: 10px;
	padding: 15px;
}

.no-records {
	text-align: center;
	padding:2em 1em;
	background-color: #f8f8f8;
	border-radius: 6px;
	margin-top: 3em;
}