<% if player.id == current_player.id %>
	<tr class="info">
<% else %>
	<tr>
<% end %>
		<td class="text-center"><%= player.rank %></td>
		<td>
			<%= link_to player.name, contact_path(player), title: "Detailed Profile for #{player.first_name}" %>
		</td>
		<% if player.challenge_issued? %>
			<td><span class="glyphicon glyphicon-arrow-right text-success"></span></td>
			<td>
				<%= player.last_challenge.challenged_player.name %>
				<%= render partial: "challenge_date", object: player.last_challenge, as: 'challenge' %>
			</td>
		<% elsif player.challenge_match_pending? %>
			<td><span class="glyphicon glyphicon-arrow-left text-danger"></span></td>
			<td>
				<%= player.last_challenge.challenger.name %>
				<%= render partial: "challenge_date", object: player.last_challenge, as: 'challenge' %>
			</td>
		<% else %>
			<td colspan="2">&nbsp;</td>
		<% end %>
		</td>
	</tr>