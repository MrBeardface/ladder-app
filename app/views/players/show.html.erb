<% content_for :title do %>
	Your Player Profile
<% end %>

<div class="row">
	<div class="span2 offset2">
		<div class="rank-badge">
			<p class="rank"><%= @player.rank %></p>
			<p>CURRENT RANK</p>
		</div>
	</div>
	<div class="span6">
		<h2><%= "#{@player.first_name} #{@player.last_name}" %></h2>
		<h5>Competing since <%= @player.created_at.to_date.to_formatted_s(:long) %></h5>
		
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Rank</th>
					<th>Player</th>
					<th>&nbsp;</th>
				</tr>
			</thead>
			<tbody>
			<% @players.each do |p| %>
				<tr>
					<td><%= p.rank %></td>
					<td><%= "#{p.first_name} #{p.last_name}" %></td>
					<% if p.id == @player.id %>
						<td>You</td>
					<% else %>
						<td><%= link_to "challenge", challenge_path(p.id) %></td>
					<% end %>
				</tr>
			<% end %>
			</tbody>
		</table>
	</div>
</div>