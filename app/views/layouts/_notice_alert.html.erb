<% if notice %>
	<script>
		window.setTimeout(function() { $(".alert-success").fadeOut(); }, 4000);
	</script>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= notice %>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= alert %>
  </div>
<% end %>