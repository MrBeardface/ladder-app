<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "LECOM Ladder", root_path, id: 'logo', class: 'brand' %>
      <nav>
        <% if player_signed_in? %>
          <ul class="nav">
              <li <%= active_page('players','show') %>>
                <%= link_to player_path(current_player) do %>
                  <i class="icon-user"></i> Your Player Profile
                <% end %>
              </li>
              <li <%= active_page('players','index') %>>
                <%= link_to players_path do %>
                  <i class="icon-list"></i> Ladder Rankings
                <% end %>
              </li>
          </ul>
          <ul class="nav pull-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-cog"></i> My Account <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to edit_player_registration_path do %>
                    <i class="icon-edit"></i> Edit Your Profile
                  <% end %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to destroy_player_session_path, method: 'delete', confirm: 'Do you really want to sign out?' do %>
                    <i class="icon-eject"></i> Sign out
                  <% end %>
                </li>
              </ul>
            </li>
          </ul>
        <% else %>
          <ul class="nav pull-right">
            <li><%= link_to "Sign Up", new_player_registration_path %></li>
            <li><%= link_to "Sign in", new_player_session_path %></li>
          </ul>
        <% end %>
      </nav>
    </div>
  </div>
</header>