<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "LECOM Ladder", root_path, id: 'logo', class: 'brand' %>
      <nav>
        <% if player_signed_in? %>
          <ul class="nav">
              <li <%= active_page('players','show') %>><%= link_to "Your Player Profile", player_path(current_player) %></li>
              <li <%= active_page('players','index') %>><%= link_to "Ladder Rankings", players_path %></li>
          </ul>
          <ul class="nav pull-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Account <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Edit Your Profile", edit_player_registration_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Sign out", destroy_player_session_path, method: 'delete', confirm: 'Do you really want to sign out?' %></li>
              </ul>
            </li>
          </ul>
        <% else %>
          <ul class="nav pull-right">
            <li><%= link_to "Sign Up", new_player_registration_path %></li>
            <li><%= link_to "Sign in", new_player_session_path %></li>
          </ul>
        <% end %>
      </nav>
    </div>
  </div>
</header>