<h2>Sign in</h2>

<%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>

  <%= f.email_field :email, :autofocus => true %>

  <%= f.password_field :password %>

  <% if devise_mapping.rememberable? -%>
	  <%= f.control_group :remember_me do %>
	    <%= f.check_box :remember_me, label: 'Remember me' %>
	  <% end %>
  <% end -%>

	<%= f.actions do %>
    <%= f.primary 'Sign in', disable_with: 'Signing you in...' %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
