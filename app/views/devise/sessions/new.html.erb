<div class="row">
  <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

    <h2>Sign in</h2>

    <hr>

    <div class="container">

      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal', role: 'form' }) do |f| %>

        <%= f.input :email, :autofocus => true %>

        <%= f.input :password %>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.input :remember_me, label: 'Remember me', as: :boolean, :wrapper => :checkbox %>
          </div>
        <% end -%>

      	<div class="form-group">
          <%= f.button :submit, 'Sign in', class: "btn-primary", data: { disable_with: 'Signing you in...' } %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>

  </div>
</div>