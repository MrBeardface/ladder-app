<div class="row">
	<div class="span6 offset3">

		<h2>Resend confirmation</h2>

		<p>Please provide the Email address you used when signing up and we will send you new confirmation instructions. If you do not receive them in a half hour, please check your spam folder.</p>

		<hr>

		<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { method: :post, class: 'form-horizontal' }) do |f| %>
		  <%= devise_error_messages! %>

		  <%= f.input :email, :autofocus => true %>

		  <div class="form-actions">
		  	<%= f.button :submit, 'Resend', class: "btn-primary", disable_with: 'Sending email...' %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>

	</div>
</div>
