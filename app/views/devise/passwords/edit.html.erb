<div class="row">
	<div class="span6 offset3">

		<h2>Change your password</h2>

		<br>

		<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { method: :put, class: 'form-horizontal' }) do |f| %>
		  <%= devise_error_messages! %>
		  <%= f.input :reset_password_token, as: :hidden %>

		  <%= f.input :password, :autofocus => true, label: 'New Password' %>

		  <%= f.input :password_confirmation, label: 'Confirm New Password' %>

			<div class="form-actions">
				<%= f.button :submit, "Change my password", disable_with: 'Changing password...' %>
			</div>

		<% end %>

		<%= render "devise/shared/links" %>

	</div>
</div>
