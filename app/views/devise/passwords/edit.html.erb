<div class="row">
	<div class="span6 offset3">

		<h2>Change your password</h2>

		<br>

		<%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { method: :put, class: 'form-horizontal' }) do |f| %>
		  <%= devise_error_messages! %>
		  <%= f.hidden_field :reset_password_token %>

		  <%= f.password_field :password, :autofocus => true, label: 'New Password' %>

		  <%= f.password_field :password_confirmation, label: 'Confirm New Password' %>

			<%= f.actions do %>
				<%= f.primary "Change my password", disable_with: 'Changing password...' %>
			<% end %>

		<% end %>

		<%= render "devise/shared/links" %>

	</div>
</div>
