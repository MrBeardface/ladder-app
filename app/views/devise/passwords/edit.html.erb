<div class="row">
	<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">

		<h2>Change your password</h2>

		<br>

		<div class="container">

			<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { method: :put, class: 'form-horizontal', role: 'form' }) do |f| %>
			  <%= devise_error_messages! %>
			  <%= f.input :reset_password_token, as: :hidden %>

			  <%= f.input :password, :autofocus => true, label: 'New Password' %>

			  <%= f.input :password_confirmation, label: 'Confirm New Password' %>

				<div class="form-group">
					<%= f.button :submit, "Change my password", class: 'btn-primary', data: { disable_with: 'Changing password...' } %>
				</div>

			<% end %>

			<%= render "devise/shared/links" %>

		</div>

	</div>
</div>
