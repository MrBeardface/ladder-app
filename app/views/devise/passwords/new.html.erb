<div class="row">
	<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">

		<h2>Forgot your password?</h2>

		<p>Provide your account email address below. We will email you the instructions to reset your password.</p>

		<hr>

		<div class="container">

			<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { method: :post, class: 'form-horizontal', role: 'form' }) do |f| %>
			  
			  <%= devise_error_messages! %>

			  <%= f.input :email, :autofocus => true %>
				
				<div class="form-group">
			  	<%= f.button :submit, 'Proceed', class: "btn-primary", disable_with: 'Sending email...' %>
				</div>

			<% end %>

			<%= render "devise/shared/links" %>

		</div>

	</div>
</div>
