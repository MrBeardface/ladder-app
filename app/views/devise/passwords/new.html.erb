<div class="row">
	<div class="span6 offset3">

		<h2>Forgot your password?</h2>

		<p>Provide your account email address below. We will email you the instructions to reset your password.</p>

		<hr>

		<%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { method: :post, class: 'form-horizontal' }) do |f| %>
		  
		  <%= devise_error_messages! %>

		  <%= f.email_field :email, :autofocus => true %>
			
			<%= f.actions do %>
		  	<%= f.primary 'Proceed', disable_with: 'Sending email...' %>
		  <% end %>

		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
