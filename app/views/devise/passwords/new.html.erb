<div class="row">
	<div class="span6 offset3">

		<h2>Forgot your password?</h2>

		<p>Provide your account email address below. We will email you the instructions to reset your password.</p>

		<hr>

		<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { method: :post, class: 'form-horizontal' }) do |f| %>
		  
		  <%= devise_error_messages! %>

		  <%= f.input :email, :autofocus => true %>
			
			<div class="form-actions">
		  	<%= f.button :submit, 'Proceed', class: "btn-primary", disable_with: 'Sending email...' %>
			</div>

		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
